<?xml version="1.0" encoding="utf-8"?>
<com.appversal.appstorys.ui.xml.OverlayLayoutView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f2f4">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/cashbook"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/more_one"
                    android:contentDescription="Cashbook" />

            <ImageView
                    android:id="@+id/bills"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/more_two"
                    android:contentDescription="Bills" />

            <ImageView
                    android:id="@+id/items"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/more_three"
                    android:contentDescription="Items" />
        </LinearLayout>

        <ImageView
                android:id="@+id/more_bottom_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/more_bottom"
                android:contentDescription="Bottom Image" />
    </LinearLayout>

    <com.appversal.appstorys.ui.xml.PinnedBannerView
            android:id="@+id/banner_more_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:bottomPadding="70dp" />

    <com.appversal.appstorys.ui.xml.CsatView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:bottomPadding="70dp" />

    <com.appversal.appstorys.ui.xml.FloaterView
            android:id="@+id/floater_more_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end" />

    <com.appversal.appstorys.ui.xml.PipView
            android:id="@+id/pip_more_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            app:bottomPadding="70dp"
            app:topPadding="70dp" />

    <com.appversal.appstorys.ui.xml.TestUserButtonView
            android:id="@+id/test_user_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp" />

</com.appversal.appstorys.ui.xml.OverlayLayoutView>